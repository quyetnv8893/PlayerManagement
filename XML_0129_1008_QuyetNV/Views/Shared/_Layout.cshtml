<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Real Madrid</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/main.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="button primary" style="margin-left: 90%%;">
    @Html.ActionLink("Login", "Login", "Authentications", null, new { @style="color:white" })
    </div>
    <div id="header">
        <ul id="navbar" class="uppercase fixed-with">
            <a href="~/Clubs"><li>Club</li></a>
            <a href="~/Players"><li>Players</li></a>
            <a href="~/Match"><li>Matches</li></a>
            <a href="~/Coaches"><li>Coaches</li></a>
            <a href="~/League"><li>Leagues</li></a>
        </ul>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Real Madrid</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
