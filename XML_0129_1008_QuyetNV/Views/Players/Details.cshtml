@model PlayerManagement.Models.Player

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="main" class="fixed-width player container">

    <div class="image" style="width:30%;margin-left: -150px;
margin-right: 100px;">        
        <img src="@Html.DisplayFor(model => model.ImageLink)" style="
                                                max-width:400px;
                                                max-height:800px;
                                                width: auto;
                                                height: auto;" />        
    </div>
    <div class="info text-center" style="width:60%">
        <h4 style="font-size:20px">Player's info</h4>
        <div class="list text-left">
            <p><label>Name: </label> <span>@Html.DisplayFor(model => model.Name)</span></p>
            <p><label>No. </label> <span>@Html.DisplayFor(model => model.Number)</span></p>
            <p><label>Pos.</label> <span>@Html.DisplayFor(model => model.Position)</span></p>
            <p><label>DoB. </label> <span>@Html.DisplayFor(model => model.DateOfBirth)</span></p>
            <p><label>Height: </label> <span>@Html.DisplayFor(model => model.Height)</span></p>
            <p><label>Weight: </label> <span>@Html.DisplayFor(model => model.Weight)</span></p>
            <p><label>Place of birth: </label> <span>@Html.DisplayFor(model => model.PlaceOfBirth)</span></p>
            <p><label>Description: </label> <div style="overflow-y:scroll; height:100px">@Html.DisplayFor(model => model.Description)</div></p>
        </div>

        <div class="buttons text-center">
            <div class="button primary">
                @Html.ActionLink("Achievements", "Index", "PlayerAchievements", new { id = Model.ID }, new { @class = "action-link" })
            </div>

            <div class="button primary">
                @Html.ActionLink("Careers", "Index", "Careers", new { id = Model.ID }, new { @class = "action-link" })
            </div>
            <div class="button primary">
                @Html.ActionLink("Matches", "ViewPlayerMatches", "PlayersMatches",
                                 new { id = Model.ID }, new { @class = "action-link" })
            </div>

            <div class="button primary">
                @Html.ActionLink("Delete", "Delete", "Players",
                                 new { id = Model.ID }, new { @class = "action-link" })
            </div>

            <div class="button primary">
                @Html.ActionLink("Edit", "Edit", "Players",
                                 new { id = Model.ID }, new { @class = "action-link" })
            </div>

        </div>

