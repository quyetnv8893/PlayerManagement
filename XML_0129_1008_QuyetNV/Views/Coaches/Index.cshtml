@model IEnumerable<PlayerManagement.Models.Coach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="main" class="fixed-width">
    <div class="coach">

        <div class="coachmgr info text-center">
            <div class="list text-left achivement">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <img src="@Html.DisplayFor(modelItem => item.ImageLink) " class=" image" />
                            <div class="detail">
                                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                <p>@Html.DisplayFor(modelItem => item.DateOfBirth)</p>
                                <p>@Html.DisplayFor(modelItem => item.Position)</p>
                            </div>
                            <div class="button text-center">
                                <div class="button primary">
                                    @Html.ActionLink("Edit", "Edit", "Coaches", new { id = item.Name}, new { @style = "color:white" }) 
                                    
                                </div>
                                <div class="button primary">
                                    @Html.ActionLink("Delete", "Delete", "Coaches", new { id = item.Name }, new { @style = "color:white" })

                                </div>

                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="button text-center">
                <div class="button primary">
                    @Html.ActionLink("Add new Coach", "Create", "Coaches", null, new { @style = "color:white" })
                </div>
            </div>
        </div>
    </div>
</div>


